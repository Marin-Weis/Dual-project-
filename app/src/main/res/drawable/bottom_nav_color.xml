<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- État : Quand l'élément est SÉLECTIONNÉ (l'écran actuel) -->
    <item android:state_selected="true" android:color="@color/bleu" />

    <!-- État : Quand on appuie sur l'élément (facultatif mais recommandé) -->
    <item android:state_pressed="true" android:color="@color/bleu_fonce" />

    <!-- État par défaut (ni sélectionné, ni pressé) -->
    <item android:color="@color/noir" />

</selector>
